<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Awesome Blog{% endblock %}</title>
    {% block stylesheets %}
    <Link rel="styleSheet" href="{{ asset('css/main.css') }}" type="text/css" />
    <Link rel="styleSheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />
    {% endblock %}


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{path('home')}}">An Awesome Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link" href="{{path('home')}}">Articles <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" href="{{path('categories')}}">Categories <span
                                class="sr-only">(current)</span></a>
                    </li>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('newPost')}}">Write</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('profile')}}">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('myPosts')}}">My Posts</a>
                    </li>

                    {% endif %}


                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link btn btn-secondary" href="{{path('logout')}}">Logout</a>
                    </li>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}

                    <li class="nav-item text-right">
                        <a class="nav-link btn btn-primary" href="{{path('login')}}">Login</a>
                    </li>
                    <li class="nav-item ml-3"><a class="nav-link btn btn-primary" href="{{path('app_register')}}">Sign
                            up</a></li>
                    {% endif %}



                </ul>
            </div>
        </nav>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>Welcome {{app.user.name}}</p>
        {% endif %}

    </header>
    {% block body %}
    {% endblock %}

</body>

</html>